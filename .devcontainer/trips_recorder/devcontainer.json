// https://aka.ms/devcontainer.json. 
{
	"name": "OVMS Admin Trips Recorder",
	"initializeCommand": "docker compose -f ./docker-compose.yml -f ./docker-compose.dev.yml config > ./docker-compose.rendered.yml",
	"dockerComposeFile": [
		"../../docker-compose.rendered.yml"
	],
	"service": "trips_recorder",
	"workspaceFolder": "/opt/src",
	"remoteUser": "worker",
	"postAttachCommand": "python -m venv venv; source venv/bin/activate; pip install -r ../requirements.txt;",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			],
			"settings": {
				"pylint.lintOnChange": true
			}
		}
	}
}