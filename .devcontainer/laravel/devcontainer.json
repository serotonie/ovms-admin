// https://aka.ms/devcontainer.json
{
	"name": "OVMS Admin Laravel Frontend",
	"initializeCommand": "docker compose down --remove-orphans; sudo chown -R pi:www-data ./laravel; sudo chown -R g=u; docker compose -f ./docker-compose.yml -f ./docker-compose.dev.yml -f ./.devcontainer/laravel/docker-compose.yml config > ./docker-compose.rendered.yml",
	"dockerComposeFile": [
		"../../docker-compose.rendered.yml"
	],
	"service": "laravel.test",
	"workspaceFolder": "/var/www/html",
	"customizations": {
		"vscode": {
			"extensions": [
				"mikestead.dotenv",
				"amiralizadeh9480.laravel-extra-intellisense",
				"onecentlin.laravel5-snippets",
				"open-southeners.laravel-pint",
				"nhedger.inertia",
				"Vue.volar",
				"bmewburn.vscode-intelephense-client",
				"MehediDracula.php-namespace-resolver",
				"vuetifyjs.vuetify-vscode"
			],
			"settings": {
				"laravel-pint.enable": true,
				"[php]": {
					"editor.defaultFormatter": "open-southeners.laravel-pint"
				}
			}
		}
	},
	"remoteUser": "sail",
	"postCreateCommand": "php artisan optimize:clear; composer install; npm install; npm run build",
	"postAttachCommand": "/bin/bash"
	// "forwardPorts": [],
	// "runServices": [],
	// "shutdownAction": "none",
}