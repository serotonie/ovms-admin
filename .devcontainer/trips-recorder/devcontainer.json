// https://aka.ms/devcontainer.json. 
{
	"name": "OVMS Admin Trips Recorder",
	"initializeCommand": "docker compose down --remove-orphans; sudo chown -R pi:www-data ./laravel; sudo chown -R g=u; docker compose -f ./docker-compose.yml -f ./docker-compose.dev.yml -f ./.devcontainer/trips-recorder/docker-compose.yml config > ./docker-compose.rendered.yml",
	"dockerComposeFile": [
		"../../docker-compose.rendered.yml"
	],
	"service": "trips-recorder",
	"workspaceFolder": "/app/src",
	"remoteUser": "worker",
	"postAttachCommand": "python -m venv venv; source venv/bin/activate; pip install -r ../requirements.txt; /bin/bash",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pylint"
			],
			"settings": {
				"pylint.lintOnChange": true
			}
		}
	}
}